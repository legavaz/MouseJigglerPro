<Window x:Class="MouseJigglerPro.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseJigglerPro"
        xmlns:viewModel="clr-namespace:MouseJigglerPro.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Mouse Jiggler Pro" Height="200" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding StatusText}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="DarkSlateGray"/>

        <Button Grid.Row="1"
                Content="{Binding ToggleButtonText}"
                Command="{Binding ToggleJiggleCommand}"
                Margin="20"
                Padding="15,10"
                FontSize="16"
                FontWeight="SemiBold"/>

        <!-- Placeholder for Settings button/link -->
        <TextBlock Grid.Row="2" Margin="0,0,0,10" HorizontalAlignment="Center">
            <Hyperlink Command="{Binding OpenSettingsCommand}">Настройки</Hyperlink>
        </TextBlock>

    </Grid>
</Window>